<odoo>
  <record id="line_details_view_stock_quant_location_tree" model="ir.ui.view">
      <field name="name">stock.quant.location.tree</field>
      <field name="model">stock.quant</field>
      <field name="arch" type="xml">
          <list create="false" edit="false" delete="false">
              <field name="location_id"/>
              <field name="lot_id"/>
              <field name="quantity"/>
              <field name="available_quantity"/>
              <field name="product_uom_id"/>
          </list>
      </field>
  </record>
  <record id="xtend_view_mrp_production_form" model="ir.ui.view">
      <field name="name">xtend.view.mrp.production.form</field>
      <field name="model">mrp.production</field>
      <field name="inherit_id" ref="mrp.mrp_production_form_view" />
      <field name="arch" type="xml">
          <xpath expr="//page[@name='components']/field[@name='move_raw_ids']/list/field[@name='product_id']" position="after">
            <field name="sm_qty_available" optional="show"/>
            <button name="sm_action_view_stock_details" 
                        type="object"
                        string="Stock Details"
                        icon="fa-cubes"
                        attrs="{'invisible': [('product_id', '=', False)]}"/>
          </xpath>
      </field>
  </record>
</odoo>
