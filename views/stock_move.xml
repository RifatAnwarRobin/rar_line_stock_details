<odoo>
  <record id="sm_view_stock_quant_location_tree" model="ir.ui.view">
      <field name="name">stock.quant.location.tree</field>
      <field name="model">stock.quant</field>
      <field name="arch" type="xml">
          <tree create="false" edit="false" delete="false">
              <field name="location_id"/>
              <field name="lot_id"/>
              <field name="quantity"/>
              <field name="available_quantity"/>
              <field name="product_uom_id"/>
          </tree>
      </field>
  </record>
  <record id="xtend_view_stock_picking_form" model="ir.ui.view">
      <field name="name">xtend.view.stock.picking.form</field>
      <field name="model">stock.picking</field>
      <field name="inherit_id" ref="stock.view_picking_form" />
      <field name="arch" type="xml">
          <xpath expr="//field[@name='move_ids_without_package']/tree/field[@name='product_id']" position="after">
            <field name="sm_qty_available" optional="show"/>
            <button name="sm_action_view_stock_details" 
                        type="object"
                        string="Stock Details"
                        icon="fa-cubes"
                        attrs="{'invisible': [('product_id', '=', False)]}"/>
          </xpath>
      </field>
  </record>
</odoo>
